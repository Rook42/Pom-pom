<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory app:title="Durations">

        <EditTextPreference
            android:inputType="number"
            app:defaultValue="25"
            app:key="durationPomodoro"
            app:title="Pomodoro Duration"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            android:inputType="number"
            app:defaultValue="5"
            app:key="durationShortBreak"
            app:title="Short Break Duration"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            android:inputType="number"
            app:defaultValue="15"
            app:key="durationLongBreak"
            app:title="Long Break Duration"
            app:useSimpleSummaryProvider="true" />


    </PreferenceCategory>
    <PreferenceCategory app:title="Goal">

        <EditTextPreference
            android:inputType="number"
            app:defaultValue="4"
            app:key="goalPomCount"
            app:title="Number of Pomodoros"
            app:useSimpleSummaryProvider="false" />

    </PreferenceCategory>
